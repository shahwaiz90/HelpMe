<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainPage" >

    <Button
        android:id="@+id/addGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/guardianNumber" 
        android:text="Add!" />

    <ListView
        android:id="@android:id/list" 
        android:focusable="false"
    	android:focusableInTouchMode="false"
        android:cacheColorHint="#00000000" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addGuardian" > 
    </ListView>

    <EditText
        android1:id="@+id/guardianNumber"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/textView1"
        android1:layout_marginTop="14dp"
        android1:ems="10"
        android1:hint="Dad/Brother/Friend/Guardian"
        android1:lines="1"
        android1:maxLines="1"
        android1:singleLine="true"
        android:inputType="number" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:text="Copyright www.ahmadshahwaiz.com" />

</RelativeLayout>